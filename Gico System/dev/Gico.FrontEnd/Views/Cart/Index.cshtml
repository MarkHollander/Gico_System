@using Gico.Config
@model Gico.FrontEndModels.Models.CartViewModel
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @await Html.PartialAsync("Components/_CssInclude")
</head>
<body>
    <div class="container">
        <form method="post">
            <h4>Cart</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Quantity</th>
                    </tr>
                </thead>
                <tbody>
                @{
                    int i = 0;
                    foreach (var item in Model.CartItems)
                    {
                        i++;
                        <tr>
                            <th scope="row">@i</th>
                            <td>@item.Name</td>
                            <td>@item.Quantity</td>
                        </tr>
                    }
                }
                </tbody>
            </table>

        </form>
    </div>

    @await Html.PartialAsync("Components/_JsInclude")

</body>
</html>
